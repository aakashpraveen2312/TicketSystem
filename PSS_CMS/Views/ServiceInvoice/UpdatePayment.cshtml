                        @Html.LabelFor(model => model.TC_TotalAmount, new { @class = "labels" })
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-12">
                        @Html.EditorFor(model => model.TC_TotalAmount, new { htmlAttributes = new { @class = "form-control textboxcolors", autocomplete = "off" } })
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-5 d-flex justify-content-end ms-1">
                        <input type="submit" class="submitbuttons me-3" tabindex="" />
                        <input type="button" value="Cancel" class="cancelbuttons" tabindex="" id="" onclick="window.location.href='@Url.Action("Index", "UpdatePayment")'" />

                    </div>
