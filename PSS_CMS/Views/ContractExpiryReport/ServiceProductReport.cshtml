    <link href="~/Content/Responsive.css" rel="stylesheet" />
    <link href="~/Content/SideMenu.css" rel="stylesheet" />
    <link href="~/Content/FooterResponsive.css" rel="stylesheet" />
    <style>
        .card {
            max-width: 100% !important;
            height: 50vh;
            overflow: visible;
        }

        .dropdown-check-list {
            position: relative;
        }

            .dropdown-check-list .anchor {
                cursor: pointer;
                display: inline-block;
                padding: 8px;
                width: 100%;
                border: 1px solid #ccc;
                background: #fff;
            }

            .dropdown-check-list ul.items {
                position: absolute;
                top: 100%;
                left: 0;
                width: 100%;
                z-index: 9999;
                background: #fff;
                border: 1px solid #ccc;
                max-height: 250px;
                overflow-y: auto;
                display: none;
                list-style: none;
            }

            .dropdown-check-list.visible ul.items {
                display: block;
            }

            .dropdown-check-list ul.items li {
                padding: 6px 10px;
            }
        .contents {
            padding: 0 16px 0 25px !important;
            min-height: 250px !important;
            margin-left: 65px !important;
            background-color: #e4e9f7 !important;
        }
    </style>
</head>

<body>
    <div class="contents">
        <nav class="nav d-flex">
            <div class="p-2 flex-grow-1"> <h3 style="margin-top:10px" class="heading ms-3 adminheadinres">SERVICE MANAGEMENT</h3></div>
            <div class="p-2" style="margin-right:10px"><h4 class="heading adminlogoutres">@Session["UserName"].ToString().ToUpper() - @Session["Role"]</h4></div>
            <div class="p-2 me-3 logout" style="margin-right:10px" data-toggle="tooltip" data-placement="bottom" title="Log out">
                <a href="@Url.Action("Logout", "Login")" class="text-decoration-none" id="logoutlink" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasBottom" aria-controls="offcanvasBottom">
                    <i class='bx bx-log-out' style="font-size:24px;color:red !important;" id="logoutresiconadmin"></i>

                </a>
            </div>

        </nav>
        <div class="row" style="margin-top:10px">
            <div class="col-lg-12">
                <ul class="breadcrumb mt-1" style="margin-bottom:0px!important">
                    <li>SERVICE PRODUCT REPORT</li>
                </ul>
            </div>
        </div>

        <div class="container mt-5 card shadow p-4 rounded-3">
            <h3 class="mb-4 text-center">Service Product Report</h3>

            <!-- ✅ Form starts here -->
            <form method="post" id="financeForm" action="@Url.Action("ServiceProductReport", "ContractExpiryReport")">

                <input type="hidden" id="ItemGroupRecid" name="Productrecid" />
                <input type="hidden" id="ItemCategoryRecid" name="contractrecid" />
                <input type="hidden" id="MaterialRecid" name="Materialrecid" />




                <div class="row g-3">

                    <!-- Product Combo -->
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Customers</label>

                        <div id="itemGroupDropdown" class="dropdown-check-list" tabindex="100">
                            <span class="anchor">-- Select Customer --</span>
                            <ul class="items" id="itemGroupList">
                                <li>
                                    <label>
                                        <input type="checkbox" id="selectAllItemGroups">
                                        <strong>Select All</strong>
                                    </label>
                                </li>
                                @if (ViewBag.Customer != null)
                                {
                                    foreach (var g in ViewBag.Customer)
                                    {
                                        <li>
                                            <input type="checkbox" class="itemGroupCheck" value="@g.Value" />
                                            @g.Text
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>

                    <!-- To Date -->
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Products</label>

                        <div id="itemCategoryDropdown" class="dropdown-check-list">
                            <span class="anchor">-- Select Product --</span>
                            <ul class="items" id="itemCategoryList"></ul>
                        </div>
                    </div>
                    <!-- Material Combo -->
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Material</label>

                        <div id="materialDropdown" class="dropdown-check-list" tabindex="100">
                            <span class="anchor">-- Select Material --</span>
                            <ul class="items" id="materialList">
                                <li>
                                    <label>
                                        <input type="checkbox" id="selectMaterials">
                                        <strong>Select All</strong>
                                    </label>
                                </li>
                                @if (ViewBag.Material != null)
                                {
                                    foreach (var g in ViewBag.Material)
                                    {
                                        <li>
                                            <input type="checkbox" class="materialCheck" value="@g.Value" />
                                            @g.Text
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>

                    <!-- Priority type Combo Box -->
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Select Type</label>
                        <select id="comboBox" name="Type" class="form-select" style="font-size:15px;">
                            <option value="">-- Select Type --</option>
                            <option value="Billable">Billable</option>
                            <option value="Non Billable">Non Billable</option>

                        </select>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="text-center mt-5">
                    <button type="submit"
                            name="ActionType"
                            value="Download"
                            class="btn btn-danger px-4 me-3">
                        Download PDF
                    </button>

                </div>

            </form>
            <!-- ✅ Form ends here -->
        </div>
        <div class="offcanvas offcanvas-bottom" tabindex="-1" id="offcanvasBottom" aria-labelledby="offcanvasBottomLabel" style="height: 150px;">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title text-align-center" id="offcanvasBottomLabel"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body d-flex flex-column justify-content-center align-items-center">
                <h4>Are you sure you want to log out?</h4>
            </div>
            <div class="offcanvas-footer d-flex justify-content-center">
                <input type="button" class="btncolorsubmit me-3" id="confirmLogoutBtn" value="Confirm" tabindex="1">
                <input type="button" class="btncolorcancel" data-bs-dismiss="offcanvas" value="Cancel" tabindex="2">
            </div>
        </div>
    </div>
    <script src="~/Scripts/Logoutjs.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
$(document).ready(function () {

    @if (TempData["ErrorMessage"] != null)
    {
        <text>
            Swal.fire({
                icon: 'info',
                title: 'Message',
                text: '@TempData["ErrorMessage"]',
                confirmButtonColor: '#034CAE',
                confirmButtonText: 'OK'
            });
        </text>
    }

});
    </script>

    <script>
$(document).ready(function () {

    /* ================= DROPDOWN OPEN/CLOSE ================= */
    /* ================= DROPDOWN OPEN/CLOSE ================= */

    $(".dropdown-check-list .anchor").click(function (e) {
        e.stopPropagation();
        $(".dropdown-check-list").not($(this).parent()).removeClass("visible"); // close others
        $(this).parent().toggleClass('visible');
    });

    // Prevent closing when clicking inside dropdown
    $(document).on("click", ".dropdown-check-list", function (e) {
        e.stopPropagation();
    });

    // Close only when clicking outside
    $(document).click(function () {
        $('.dropdown-check-list').removeClass('visible');
    });


    /* ================= SELECT ALL PRODUCT ================= */
    $(document).on("change", "#selectAllItemGroups", function () {
        $(".itemGroupCheck").prop("checked", this.checked);
        loadContracts();
    });

    $(document).on("change", ".itemGroupCheck", function () {

        $("#selectAllItemGroups").prop(
            "checked",
            $(".itemGroupCheck").length === $(".itemGroupCheck:checked").length
        );

        loadContracts();
    });

    /* ================= SELECT ALL CONTRACT ================= */
    $(document).on("change", "#selectAllCategories", function () {
        $(".categoryCheck").prop("checked", this.checked);
    });

    $(document).on("change", ".categoryCheck", function () {
        $("#selectAllCategories").prop(
            "checked",
            $(".categoryCheck").length === $(".categoryCheck:checked").length
        );
    });

    /* ================= LOAD CONTRACT BASED ON PRODUCT ================= */
    function loadContracts() {

        var selectedProducts = [];

        $(".itemGroupCheck:checked").each(function () {
            selectedProducts.push($(this).val());
        });

        $("#itemCategoryList").empty();

        if (selectedProducts.length === 0)
            return;

        $("#itemCategoryList").html("<li>Loading...</li>");

        $.getJSON('@Url.Action("CustomerBasedProduct", "ContractExpiryReport")',
            { ProductRecid: selectedProducts.join(",") },
            function (response) {

                $("#itemCategoryList").empty();

                $("#itemCategoryList").append(`
                    <li>
                        <label>
                            <input type="checkbox" id="selectAllCategories">
                            <strong>Select All</strong>
                        </label>
                    </li>
                `);

                $.each(response.data, function (i, contract) {
                    $("#itemCategoryList").append(`
                        <li>
                            <input type="checkbox" class="categoryCheck" value="${contract.Value}" />
                            ${contract.Text}
                        </li>
                    `);
                });

            }).fail(function () {
                $("#itemCategoryList").html("<li>Error loading contracts</li>");
            });
    }

    /* ================= FORM SUBMIT ================= */
    $("#financeForm").submit(function (e) {

        var selectedProducts = [];
       
        var selectedContracts = [];
        var selectedMaterials = [];

        $(".itemGroupCheck:checked").each(function () {
            selectedProducts.push($(this).val());
        });

        $(".categoryCheck:checked").each(function () {
            selectedContracts.push($(this).val());
        });
      

        $(".materialCheck:checked").each(function () {
            selectedMaterials.push($(this).val());
        });


        var paymentType = $("#Type").val();

        // At least one filter must be selected
        if (selectedProducts.length === 0 &&
            selectedContracts.length === 0 &&
            paymentType === "") {

            e.preventDefault();
            Swal.fire("Please select at least one filter");
            return;
        }


        $("#ItemGroupRecid").val(selectedProducts.join(","));
        $("#ItemCategoryRecid").val(selectedContracts.join(","));
        $("#MaterialRecid").val(selectedMaterials.join(","));

       
    });

});
    </script>


</body>
</html>


