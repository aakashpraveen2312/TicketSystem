    <div id="preloader2"></div>
    <!-- LogOut JS -->
    <script src="~/Scripts/Logoutjs.js"></script>
    <!-- Bootstrap 5 JS (optional, only needed for UI components like tooltips) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
$(document).ready(function () {
    // Intercept form submission
    $("form").on("submit", function (event) {
        event.preventDefault();

        var submitBtn = $(this).find("input[type='submit']");
        submitBtn.prop("disabled", true);

        var form = $(this);
        var formData = new FormData(this);

        // Disable page interaction
        $("body").css("pointer-events", "none");

        $.ajax({
            url: form.attr("action"),
            type: "POST",
            data: formData,
            processData: false,
            contentType: false,
            success: function (response) {
                if (response.success) {

                    // 🔹 Step 1: Show "Processing..." dialog
                    Swal.fire({
                        title: "Processing...",
                        html: "Please wait while we update your payment details.",
                        allowOutsideClick: false,
                        allowEscapeKey: false,
                        didOpen: () => {
                            Swal.showLoading();
                        }
                    });

                    // 🔹 Step 2: After a small delay, show success dialog
                    setTimeout(function () {
                        Swal.fire({
                            title: "Success!",
                            text: response.message,
                            icon: "success",
                            showCancelButton: true,
                            confirmButtonText: "Back to List",
                            allowOutsideClick: false,
                            allowEscapeKey: false,
                            customClass: {
                                confirmButton: "swal-btn-continue",
                            },
                            didOpen: () => {
                                $(".swal2-container").css("pointer-events", "auto");
                            }
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.href = '@Url.Action("Index", "ServiceInvoice")';
                            } else {
                                window.location.href = '@Url.Action("UpdatePayment", "ServiceInvoice")';
                            }
                        });
                    }, 1000); // 1 second delay

                } else {
                    // ℹ️ Info alert for validation or backend message
                    Swal.fire({
                        title: "Message",
                        text: response.message,
                        icon: "info",
                        allowOutsideClick: false,
                        allowEscapeKey: false
                    });
                    resetForm();
                }
            },
            error: function () {
                // ❌ Error alert
                Swal.fire({
                    title: "Error!",
                    text: "An unexpected error occurred while updating payment.",
                    icon: "error",
                    allowOutsideClick: false,
                    allowEscapeKey: false
                });
                resetForm();
            }
        });
    });

    function resetForm() {
        $("input[type='submit']").prop("disabled", false);
        $("body").css("pointer-events", "auto");
    }
});
    </script>




</body>
