                        @Html.LabelFor(model => model.IsDisabled, new { @class = "labels" })
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-12">
                        @Html.CheckBoxFor(model => model.IsDisabled, new { @class = "form-check-input", tabindex = "4", })
                    </div>
                </div>
                <div class="row ">
                    <div class="col-lg-2">

                    </div>
                    <div class="col-lg-3 d-flex justify-content-end">
