        </div>
        <div class="container mt-3">

            @using (Html.BeginForm("UpdatePayment", "ServiceInvoice", FormMethod.Post))
            {

                <div class="row mb-3">
                    <div class="col-lg-2 col-md-2 col-sm-12">
                        @Html.LabelFor(model => model.TC_ReferenceNo, new { @class = "labels" })
