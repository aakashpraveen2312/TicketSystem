                        @Html.LabelFor(model => model.HSNC_CATEGORYNAME, new { @class = "labels" })
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-12">
                        @Html.EditorFor(model => model.HSNC_CATEGORYNAME, new { htmlAttributes = new { @class = "form-control textboxcolors", tabindex = "2", autocomplete = "off" } })

