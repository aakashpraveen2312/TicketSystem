    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @*Logout Pronptbox script*@
    <script>
    document.getElementById("logoutLink").addEventListener("click", function () {
        Swal.fire({
            title: "Are you sure you want to log out?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonText: "Confirm",
            cancelButtonText: "Cancel",
            confirmButtonColor: "#28a745",
            cancelButtonColor: "#dc3545",
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '@Url.Action("Logout", "Login")';
            }
        });
    });
    </script>

    @*Toastr for created succesfully*@
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- jQuery CDN -->
    <script>
$(function () {

    $("#createform").on("submit", function (e) {
        e.preventDefault();

        const $btn = $("#savebutton");
        $btn.prop("disabled", true);

        $("body").css("pointer-events", "none");

        $.ajax({
            url: '@Url.Action("Create", "HSNCategory")',
            type: 'POST',
            data: new FormData(this),
            processData: false,
            contentType: false,

            success: function (response) {

                if (response.success) {

                    Swal.fire({
                        title: "Processing...",
                        allowOutsideClick: false,
                        didOpen: () => Swal.showLoading()
                    });

                    setTimeout(() => {
                        Swal.fire({
                            title: "Success!",
                            text: response.message,
                            icon: "success",
                            showCancelButton: true,
                            confirmButtonText: "Continue",
                            cancelButtonText: "Back to List",
                            customClass: {
                                confirmButton: "swal-btn-continue",
                                cancelButton: "swal-btn-back"
                            }
                        }).then(r => {
                            r.isConfirmed
                                ? location.reload()
                                : window.location.href = '@Url.Action("List","HSNCategory")';
                        });
                    }, 800);

                } else {
                    Swal.fire("Message", response.message, "info");
                    reset();
                }
            },
            error: function () {
                Swal.fire("Error", "Unexpected error occurred", "error");
                reset();
            }
        });

        function reset() {
            $btn.prop("disabled", false).val("Save");
            $("body").css("pointer-events", "auto");
        }
    });

});
    </script>
</body>
</html>


