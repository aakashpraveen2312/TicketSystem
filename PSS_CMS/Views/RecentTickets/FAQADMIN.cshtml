        <div class="row ms-3 mt-3 mb-3">
            <div class="col-md-4 mt-3">
                @{ var projectTypeList = ViewBag.Product as IEnumerable<SelectListItem>;
                    var defaultSelectedValue = projectTypeList?.FirstOrDefault()?.Value ?? ""; // Get first project ID }
                }
