@model PSS_CMS.Models.ServiceInvoiceData

@{
    ViewBag.Title = "Service Invoice";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        input.submitbuttons, button#savebutton {
            background-color: #6ed3d0;
            width: 75px;
            padding: 5px;
            color: #fff;
            border: #6ed3d0;
            border-radius: 5px;
        }

        .cancelbuttons {
            background-color: #f0a72d;
            width: 75px;
            padding: 5px;
            color: #fff;
            border: #f0a72d;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h2 class="mb-3">SERVICE INVOICE</h2>

        @using (Html.BeginForm("DownaloadPDF", "ServiceInvoice", FormMethod.Post))
        {
            <ul class="nav nav-tabs" id="invoiceTabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="info-tab" data-bs-toggle="tab" href="#info" role="tab">Invoice Info</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="materials-tab" data-bs-toggle="tab" href="#materials" role="tab">Materials</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="totals-tab" data-bs-toggle="tab" href="#totals" role="tab">Totals</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="bank-tab" data-bs-toggle="tab" href="#bank" role="tab">Bank Details</a>
                </li>
            </ul>

            <div class="tab-content mt-3">
                <!-- Invoice Info -->
                <div class="tab-pane fade show active" id="info" role="tabpanel">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            @Html.LabelFor(m => m.BillableMaterials.FirstOrDefault().InvoiceNumber)
                            @Html.TextBoxFor(m => m.BillableMaterials.FirstOrDefault().InvoiceNumber, new { @class = "form-control" })
                        </div>
                        <div class="col-md-4">
                            @Html.LabelFor(m => m.BillableMaterials.FirstOrDefault().InvoiceDate)
                            @Html.TextBox("InvoiceDate",
                                string.IsNullOrEmpty(Model.BillableMaterials.FirstOrDefault()?.InvoiceDate)
                                    ? ""
                                    : DateTime.Parse(Model.BillableMaterials.FirstOrDefault().InvoiceDate).ToString("dd/MM/yyyy"),
                                new { @class = "form-control" })
                        </div>
                        <div class="col-md-4">
                            @Html.LabelFor(m => m.BillableMaterials.FirstOrDefault().TicketRaisedDate)
                            @Html.TextBox(
                                "TicketRaisedDate",
                                string.IsNullOrEmpty(Model.BillableMaterials.FirstOrDefault()?.TicketRaisedDate)
                                    ? ""
                                    : DateTime.Parse(Model.BillableMaterials.FirstOrDefault().TicketRaisedDate).ToString("dd/MM/yyyy"),
                                new { @class = "form-control" }
                            )
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.BillableMaterials.FirstOrDefault().CustomerName)
                            @Html.TextBoxFor(m => m.BillableMaterials.FirstOrDefault().CustomerName, new { @class = "form-control" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.BillableMaterials.FirstOrDefault().CustomerAddress)
                            @Html.TextBoxFor(m => m.BillableMaterials.FirstOrDefault().CustomerAddress, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.BillableMaterials.FirstOrDefault().GST)
                            @Html.TextBoxFor(m => m.BillableMaterials.FirstOrDefault().GST, new { @class = "form-control" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.BillableMaterials.FirstOrDefault().Comments)
                            @Html.TextAreaFor(m => m.BillableMaterials.FirstOrDefault().Comments, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.BillableMaterials.FirstOrDefault().ProductName)
                            @Html.TextBoxFor(m => m.BillableMaterials.FirstOrDefault().ProductName, new { @class = "form-control" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.BillableMaterials.FirstOrDefault().WarrantyUpto)
                            @Html.TextBox(
                                                       "TicketRaisedDate",
                                                       string.IsNullOrEmpty(Model.BillableMaterials.FirstOrDefault()?.WarrantyUpto)
                                                           ? ""
                                                           : DateTime.Parse(Model.BillableMaterials.FirstOrDefault().WarrantyUpto).ToString("dd/MM/yyyy"),
                                                       new { @class = "form-control" }
                                                   )
                        </div>
                    </div>
                </div>
                <!-- Materials -->
                <div class="tab-pane fade" id="materials" role="tabpanel">
                    <h4>Billable Materials</h4>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Material Name</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>CGST</th>
                                <th>SGST</th>
                                <th>Amount</th>
                                <th>Discount</th>
                                <th>Net Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.BillableMaterials)
                            {
                                <tr>
                                    <td>@item.MaterialName</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Price</td>
                                    <td>@item.CGST</td>
                                    <td>@item.SGST</td>
                                    <td>@item.Amount</td>
                                    <td>@item.Discount</td>
                                    <td>@item.NetAmount</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <h4>Non-Billable Materials</h4>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Material Name</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Net Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.NonBillableMaterials)
                            {
                                <tr>
                                    <td>@item.MaterialName</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Price</td>
                                    <td>@item.NetAmount</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Totals -->
                <div class="tab-pane fade" id="totals" role="tabpanel">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            @Html.Label("Total")
                            <input type="text" class="form-control" value="@Model.BillableMaterials.Sum(x => x.Amount)" readonly />
                        </div>
                        <div class="col-md-6">
                            @Html.Label("Net Amount")
                            <input type="text" class="form-control" value="@Model.BillableMaterials.Sum(x => x.NetAmount)" readonly />
                        </div>
                    </div>
                </div>

                <!-- Bank Details -->
                <div class="tab-pane fade" id="bank" role="tabpanel">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.BillableMaterials.FirstOrDefault().BankName)
                            @Html.TextBoxFor(m => m.BillableMaterials.FirstOrDefault().BankName, new { @class = "form-control" })
                        </div>


                        <div class="col-md-6">
                            @Html.LabelFor(m => m.BillableMaterials.FirstOrDefault().BankLocation)
                            @Html.TextBoxFor(m => m.BillableMaterials.FirstOrDefault().BankLocation, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="row mb-3">

                        <div class="col-md-6">
                            @Html.LabelFor(m => m.BillableMaterials.FirstOrDefault().AccountNumber)
                            @Html.TextBoxFor(m => m.BillableMaterials.FirstOrDefault().AccountNumber, new { @class = "form-control" })
                        </div>

                        <div class="col-md-6">
                            @Html.LabelFor(m => m.BillableMaterials.FirstOrDefault().AccountType)
                            @Html.TextBoxFor(m => m.BillableMaterials.FirstOrDefault().AccountType, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="row mb-3">

                        <div class="col-md-6">
                            @Html.LabelFor(m => m.BillableMaterials.FirstOrDefault().IFSCCode)
                            @Html.TextBoxFor(m => m.BillableMaterials.FirstOrDefault().IFSCCode, new { @class = "form-control" })
                        </div>

                        <div class="col-md-6">
                            @Html.LabelFor(m => m.BillableMaterials.FirstOrDefault().BankAddress)
                            @Html.TextBoxFor(m => m.BillableMaterials.FirstOrDefault().BankAddress, new { @class = "form-control" })
                        </div>

                    </div>
                </div>


            </div>



            <div class="row">
                <div class="col-md-4">
                </div> 
                
                
                <div class="col-md-8 d-flex justify-content-end">
                    <input type="submit" value="Generate PDF" class="submitbuttons me-2" tabindex="" />
                    <input type="button" value="Cancel" class="cancelbuttons" tabindex="" id="" onclick="window.location.href='@Url.Action("Index", "ServiceInvoice")'" />

                </div>
            </div>

            <div class="mt-3">

            </div>
        }
    </div>
 

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
