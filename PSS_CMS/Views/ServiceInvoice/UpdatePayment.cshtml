                        @Html.LabelFor(model => model.TC_ModeOfPayment, new { @class = "labels" })
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-12">
                        @Html.EditorFor(model => model.TC_ModeOfPayment, new { htmlAttributes = new { @class = "form-control textboxcolors", autocomplete = "off" } })
